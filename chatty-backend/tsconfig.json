{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build",
        "rootDir": "./src",
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["src", "types"]
}
